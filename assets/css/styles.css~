  opacity: 0;
  transform: translateY(2rem);
  transition: opacity 0.8s var(--ease-out-expo), transform 0.8s var(--ease-out-expo);
}

html.js-loaded .reveal.revealed {
  opacity: 1;
  transform: none;
}

/* Staggered cards */
html.js-loaded .expertise-grid .card.reveal:nth-child(1) { transition-delay: 0s; }
html.js-loaded .expertise-grid .card.reveal:nth-child(2) { transition-delay: 0.1s; }
html.js-loaded .expertise-grid .card.reveal:nth-child(3) { transition-delay: 0.2s; }
html.js-loaded .expertise-grid .card.reveal:nth-child(4) { transition-delay: 0.3s; }


/* === RESPONSIVE === */

/* Mobile nav: without JS, always visible. With JS, toggled. */
@media (max-width: 640px) {
  .nav-menu {
    flex-direction: column;
    gap: var(--space-xs);
    align-items: flex-start;
    font-size: var(--fs-small);
  }

  /* When JS is loaded, hide nav behind toggle on mobile */
  html.js-loaded .nav-toggle {
    display: flex;
  }

  html.js-loaded .nav-menu {
    display: none;
    position: absolute;
    top: 4rem;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--c-bg-deep);
    padding: var(--space-lg) var(--gutter);
    flex-direction: column;
    gap: var(--space-md);
    align-items: flex-start;
    border-top: 1px solid var(--c-border);
  }

  html.js-loaded .nav-menu.is-open {
    display: flex;
  }

  html.js-loaded .nav-menu a {
    font-size: 1.1rem;
    padding: var(--space-xs) 0;
  }

  /* When nav is open, header becomes a full-screen fixed overlay.
     Nav-menu is position:absolute inside it, avoiding the
     backdrop-filter containing-block bug with position:fixed. */
  body.nav-open .site-header {
    position: fixed;
    inset: 0;
    -webkit-backdrop-filter: none;
    backdrop-filter: none;
    background: var(--c-bg-deep);
  }

  /* Prevent body scroll when nav is open */
  body.nav-open {
    overflow: hidden;
  }

  .hero-content {
    padding-block: 5rem 3rem;
  }

  .scroll-hint {
    display: none;
  }
}

